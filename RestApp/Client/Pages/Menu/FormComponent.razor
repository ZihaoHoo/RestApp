<EditForm Model="@menu" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Restaurant Name: </label>
            <div>
                <InputText @bind-Value="menu.Rest_Name" class="form-control" />
                <ValidationMessage For="@(()=> menu.Rest_Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Menu Url: </label>
            <div>
                <InputText @bind-Value="menu.Path_url" class="form-control" />
                <ValidationMessage For="@(()=> menu.Path_url)" />
            </div>
        </div>

        <div class="form-group">
            <label>Preview: </label>
            <div>
                <embed src="@menu.Path_url" width="500" height="600"/>
            </div>
        </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class=" btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="menus" />
</EditForm>
@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Menu menu { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}