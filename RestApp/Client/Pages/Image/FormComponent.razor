<EditForm Model="@image" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Restaurant Name: </label>
            <div>
                <InputText @bind-Value="image.Rest_Name" class="form-control" />
                <ValidationMessage For="@(()=> image.Rest_Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Image Url: </label>
            <div>
                <InputText @bind-Value="image.Img_url" class="form-control" />
                <ValidationMessage For="@(()=> image.Img_url)" />
            </div>
            </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class=" btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="images" />
</EditForm>
@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Image image { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}